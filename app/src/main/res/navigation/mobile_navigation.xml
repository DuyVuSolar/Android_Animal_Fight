<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/mainFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.kuemiin.animalfight.ui.fragment.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/action_splashFragment_to_introFragment"
            app:destination="@id/introFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/introFragment"
        android:name="com.kuemiin.animalfight.ui.fragment.intro.IntroFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/action_introFragment_to_guideFragment"
            app:destination="@id/guideFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"
            app:popUpTo="@id/introFragment"
            app:popUpToInclusive="true"/>

        <action
            android:id="@+id/action_introFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"
            app:popUpTo="@id/introFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/guideFragment"
        android:name="com.kuemiin.animalfight.ui.fragment.guide.GuideFragment"
        android:label="fragment_guide"
        tools:layout="@layout/fragment_guide">

        <action
            android:id="@+id/action_guideFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"
            app:popUpTo="@id/guideFragment"
            app:popUpToInclusive="true"/>

    </fragment>

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.kuemiin.animalfight.ui.fragment.main.MainFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_mainFragment_to_cameraFragment"
            app:destination="@id/cameraFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />

        <action
            android:id="@+id/action_mainFragment_to_tryThisFragment"
            app:destination="@id/tryThisFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />

        <action
            android:id="@+id/action_mainFragment_to_permisionFragment"
            app:destination="@id/permisionFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
        <action
            android:id="@+id/action_mainFragment_to_previewGalleryFragment"
            app:destination="@id/previewGalleryFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
    </fragment>


    <fragment
        android:id="@+id/tryThisFragment"
        android:name="com.kuemiin.animalfight.ui.fragment.trythis.TryThisFragment"
        android:label="fragment_try_this"
        tools:layout="@layout/fragment_try_this">

        <action
            android:id="@+id/action_tryThisFragment_to_cameraFragment"
            app:destination="@id/cameraFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
        <action
            android:id="@+id/action_tryThisFragment_to_languageFragment"
            app:destination="@id/languageFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />

    </fragment>

    <fragment
        android:id="@+id/languageFragment"
        android:name="com.kuemiin.animalfight.ui.fragment.language.LanguageFragment"
        android:label="fragment_language"
        tools:layout="@layout/fragment_language">

        <action
            android:id="@+id/action_languageFragment_to_cameraFragment"
            app:destination="@id/cameraFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"
            app:popUpTo="@id/tryThisFragment"
            app:popUpToInclusive="false" />

    </fragment>

    <fragment
        android:id="@+id/permisionFragment"
        android:name="com.kuemiin.animalfight.ui.fragment.permission.PermisionFragment"
        android:label="fragment_permission"
        tools:layout="@layout/fragment_permission">

        <action
            android:id="@+id/action_permisionFragment_to_tryThisFragment"
            app:destination="@id/tryThisFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"
            app:popUpTo="@id/mainFragment"
            app:popUpToInclusive="false" />

    </fragment>

    <fragment
        android:id="@+id/cameraFragment"
        android:name="com.kuemiin.animalfight.ui.fragment.camera.CameraFragment"
        android:label="fragment_camera"
        tools:layout="@layout/fragment_camera">

        <action
            android:id="@+id/action_cameraFragment_to_resultFragment"
            app:destination="@id/resultFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />

        <action
            android:id="@+id/action_cameraFragment_to_processingFragment"
            app:destination="@id/processingFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />

    </fragment>
    <fragment
        android:id="@+id/processingFragment"
        android:name="com.kuemiin.animalfight.ui.fragment.processing.ProcessingFragment"
        android:label="fragment_processing"
        tools:layout="@layout/fragment_processing">

        <action
            android:id="@+id/action_processingFragment_to_resultFragment"
            app:destination="@id/resultFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
        <action
            android:id="@+id/action_processingFragment_to_homeFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/mainFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />

    </fragment>

    <fragment
        android:id="@+id/resultFragment"
        android:name="com.kuemiin.animalfight.ui.fragment.result.ResultFragment"
        android:label="fragment_processing"
        tools:layout="@layout/fragment_result">

    </fragment>

    <fragment
        android:id="@+id/previewGalleryFragment"
        android:name="com.kuemiin.animalfight.ui.fragment.preview_gallery.PreviewGalleryFragment"
        android:label="fragment_preview_design"
        tools:layout="@layout/fragment_preview_design"></fragment>
</navigation>